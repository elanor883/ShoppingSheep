<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp" >

            <Button
                android:id="@+id/button_1"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn1bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn2bg" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn3bg" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn4bg" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn5bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp" >

            <Button
                android:id="@+id/button_6"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn6bg" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn7bg" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn8bg" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn9bg" />

            <Button
                android:id="@+id/button_10"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn10bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_11"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn11bg" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn12bg" />

            <Button
                android:id="@+id/button_13"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn13bg" />

            <Button
                android:id="@+id/button_14"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn14bg" />

            <Button
                android:id="@+id/button_15"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/btn15bg" />
        </LinearLayout>

        <EditText
            android:id="@+id/c_editText"
            android:layout_width="299dp"
            android:layout_height="60sp"
            android:layout_weight="0.15"
            android:ems="10"
            android:inputType="text|textFilter" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textCheck"
            android:layout_width="296dp"
            android:layout_height="20dp"
            android:layout_weight="0.01"
 />

        <Button
            android:id="@+id/dialog_button2"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="0.36"
            android:text="OK" />
    </LinearLayout>

</ScrollView>